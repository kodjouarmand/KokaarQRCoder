
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-primary">Company List</h2>
    </div>
    @if (User.IsInRole(StaticHelper.ROLE_NAME_SUPER_ADMIN))
    {
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Add new company</a>
        </div>
    }
    </div>

<br />
<div class="p-4 border rounded">
    <table id="tblData" class="table table-striped table-bordered table-sm" style="width:100%">
        <thead class="thead-dark">
            <tr class="table-info">
                <th>Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Web Site</th>
                <th>Address</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{

    <script src="~/js/company.js"></script>
}
